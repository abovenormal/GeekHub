<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_500"
    tools:context=".MainActivity">

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black"
        >
        <ImageView
            android:id="@+id/go_main_logo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="left"
            android:src="@drawable/delete_logo"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="10dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/go_chatting"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/chat_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <ImageView
                android:id="@+id/nav_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="10dp"
                android:src="@drawable/navigation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

<!--            <ImageView-->
<!--                android:id="@+id/root_button"-->
<!--                android:layout_width="35dp"-->
<!--                android:layout_height="35dp"-->
<!--                android:layout_marginHorizontal="12dp"-->
<!--                android:layout_marginVertical="10dp"-->
<!--                app:layout_constraintStart_toEndOf="@id/focus_button"-->
<!--                app:layout_constraintTop_toTopOf="parent"-->
<!--                app:srcCompat="@drawable/driving" />-->


            <ImageView
                android:id="@+id/focus_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="10dp"
                app:layout_constraintStart_toEndOf="@id/nav_button"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/auto_on" />
            



        </LinearLayout>



    </com.google.android.material.navigation.NavigationView>

    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/camera_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </FrameLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/live_focus_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:padding="4dp"
        android:layout_margin="20dp"
        android:src="@drawable/focus_location"
        app:layout_constraintBottom_toTopOf="@+id/main_container_view"
        app:layout_constraintStart_toStartOf="parent" />

    <FrameLayout
        android:id="@+id/main_container_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:foregroundGravity="bottom"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>