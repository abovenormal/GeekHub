<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_500"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayoutTmap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    </LinearLayout>

    <ImageView
        android:id="@+id/focus_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/focus_off"
        app:layout_constraintStart_toEndOf="@id/nav_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/root_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/driving"
        app:layout_constraintStart_toEndOf="@id/focus_button"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/nav_button"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:src="@drawable/navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/go_chatting"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:src="@drawable/chat_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/main_container_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <FrameLayout
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>