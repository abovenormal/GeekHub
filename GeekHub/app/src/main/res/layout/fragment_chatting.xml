<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="770dp"
    android:background="@drawable/fragment_form"
    tools:context=".ChattingFragment">

    <View
        android:id="@+id/view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:background="@drawable/nav_up_button"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/view">

        <LinearLayout
            android:id="@+id/admin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="80dp">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:text="@string/admin"
                android:textSize="24sp"
                android:textStyle="bold" />



            <View
                android:id="@+id/admin_chatting"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:visibility="invisible"
                android:background="@color/gray_500" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/colleague_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:text="@string/colleague"
                android:textSize="24sp"
                android:textStyle="bold" />


            <View
                android:id="@+id/colleague_chatting"
                android:layout_width="100dp"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:visibility="invisible"
                android:background="@color/gray_500" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:paddingStart="20dp"
        app:layout_constraintHeight_percent="0.05"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Spinner
            android:id="@+id/spinner_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Spinner
            android:id="@+id/spinner_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintHeight_percent="0.58"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:orientation="vertical"
                android:paddingVertical="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingBottom="5dp"
                    android:text="기사님" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:textSize="18sp"
                        android:autoSizeTextType="uniform"
                        android:background="@drawable/speach_bubble"
                        android:padding="10dp"
                        android:text="어쩌구 ㅜㅈ절주절어쩌구 ㅜㅈ절주절어쩌구 ㅜㅈ절주절어쩌구 ㅜㅈ절주절어쩌구 ㅜㅈ절주절어쩌구 ㅜㅈ절주절어쩌구 ㅜㅈ절주절" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="오후 1:35" />


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="10"
        app:layout_constraintHeight_percent="0.065"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2">

        <EditText
            android:id="@+id/edit_chatting"
            android:layout_width="0dp"
            android:layout_weight="8.6"
            android:layout_height="match_parent"
            android:background="@drawable/login_box"
            app:layout_constraintHeight_percent="0.05" />
        <FrameLayout
            android:id="@+id/send_button"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:layout_height="wrap_content">
            <View
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/no_radius_button"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/send" />

        </FrameLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/mic"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintHeight_percent="0.17"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/circle" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/mic" />

    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>